.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to (image_tag "sidekyck_logo.svg"), root_path, class: 'logo'
      = link_to "Sidekyck", root_path, class: 'brand'
      %ul{ :class => "nav pull-right" }
        - if signed_in?
          %li= link_to current_user.name, current_user
          %li{ :class => 'icon dropdown' }
            = render "shared/friend_requests"
          %li{ :class => 'icon dropdown' }
            = render "shared/notifications"
          %li{ :class => 'divider-vertical' }
          %li{ :class => 'icon dropdown' }
            = link_to (image_tag "settings_icon.svg"), "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}
            %ul{ :class => 'dropdown-menu' }
              %li
                = link_to 'Sign out', signout_path
                = link_to 'Go to settings', edit_user_path(current_user)
        - else
          %button{ :class => "btn btn-facebook"}
            %i{ :class => "fa fa-facebook" }
            = link_to "| Login with Facebook", "/auth/facebook"
          %button{ :class => "btn btn-twitter"}
            %i{ :class => "fa fa-twitter" }
            = link_to "| Login with Twitter", "/auth/twitter"
